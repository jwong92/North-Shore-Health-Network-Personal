@model WebApplication1.Models.donation

@{
    ViewBag.Title = "UserWithoutAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Make a Donation Account</h2>
<p>Thank you for choosing to donate to the North Shore Health Network. Please register as a donor, and make your donation.</p>
<hr />
@* IF THE USER HAS AN ACCOUNT BUT HASN'T REGISTERED TO BECOME A DONER YET *@
@using (Html.BeginForm("CreateAccountForUser", "Donations"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Account Information</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.north_shore_accounts.fname, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.north_shore_accounts.fname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.north_shore_accounts.fname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.north_shore_accounts.lname, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.north_shore_accounts.lname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.north_shore_accounts.lname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.north_shore_accounts.address, htmlAttributes: new { @class = "control-label col-md-2" })
